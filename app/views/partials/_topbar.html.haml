.topbar-wrapper{:style => "z-index:5;"}
  .topbar
    .topbar-inner
      .fill
        .container
          .brand#quirkweek-brand
            =link_to "Quirkweek", root_path
          -unless current_user
            %ul.nav.secondary-nav
              %li
                =link_to "Sign Up", choose_signup_path
              %li
                =link_to "Log In", login_path
                
          -if current_user
            %ul.nav.secondary-nav
              %li.user-photo
                =image_tag current_user.photo, :size => "30x30"
              %li
                =link_to "My Account", account_path
              %li
                =link_to "Log out", logout_path
            %p.pull-right
              Logged in as
              =link_to "#{current_user.name}", "#"
